@model Allergy.ViewModels.EditAllergicViewModel

<div class="modal-content">
    <div class="modal-header">
        <h4>Edit person record</h4>
        <div class="pull-right">
            <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        </div>
    </div>
    <div class="modal-body">
        <form asp-action="EditAllergic" asp-controller="Allergics" asp-route-allergicId="@Model.AllergicId" id="edit_allergic">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label">
                    Person's current diagnosis: <br />
                    @Model.Diagnosis
                </label>
            </div>

            @await Html.PartialAsync("~/Views/Allergics/Shared/_AllergicEditor.cshtml", Model)
        </form>
    </div>

    <div class="modal-footer">
        <button type="submit" class="btn btn-primary" data-for="edit_allergic" id="submit_edit_allergic">Save</button>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
    </div>
</div>
